<!DOCTYPE html>
<html lang="en">
<% include ../partials/header.ejs %>
<link href="/../assets/css/bootstrap.min.css" rel="stylesheet">

<body>

<form class="form-horizontal" action="/contact" method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>Contact Us At Fitpath</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Email</label>
            <div class="col-md-4">
                <input id="textinput" name="email" type="email" placeholder="your email" class="form-control input-md">

            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="text">Text</label>
            <div class="col-md-4">
                <textarea class="form-control" id="text" name="text"></textarea>
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="Submit"></label>
            <div class="col-md-4">
                <button id="Submit" name="Submit" class="btn btn-primary">Submit</button>
                <a href="/" class= "btn btn-primary">Get Back To Fitpath</a>

            </div>
        </div>

    </fieldset>
</form>

</body>

</html>